
<div class="edit_price_form">
    <%= form_tag products_path, method: 'PATCH', remote: true, id: "price_form" do %>
    <input type="hidden" name="product[SKU]" value="" id="pro_sku1">
    <input type="hidden" name="from" value="price" id="pro_sku1">
    <input type="hidden" name="skus" value="" id="skus">

    <div class="form-group">
        <%= label_tag :sku, 'SKU:', class: "control-label" , readonly: true%>
        <%= text_field_tag :sku, nil,class: "form-control sku", disabled: true%>
    </div>

     <div class="form-group">
        <%= label_tag :name, 'Name:', class: "control-label" , readonly: true%>
        <%= text_field_tag :name, nil,class: "form-control name", disabled: true%>
    </div>
    
    <div class="form-group">
        <div class="row">
            <div class="col-md-4">
                <%= label_tag :group ,'Group',class: "control-label"%>
            </div>

            <div class="col-md-4">
                <%= label_tag :rrp ,'Price',class: "control-label"%>
            </div>

            <div class="col-md-4">
                <%= label_tag :new_rrp ,'New Price',class: "control-label"%>
            </div>
        </div>

        <div class="row group_prices">
            <div>
                
            </div>
        </div>
    </div>

    <%=submit_tag "UPDATE PRICE", class: "btn btn-warning", id: "replace_price"%>
    <%end%>
    <br/>
    <%=render partial: "products/products_list"%>
</div>
